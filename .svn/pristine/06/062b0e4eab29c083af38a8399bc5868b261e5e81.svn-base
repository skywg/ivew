                    </div>
                </div>
            </Col>
        </Row>
    </div>
</template>
<script>
import axios from 'axios'
import $ from 'jquery'
export default {
    created() {
        this.fetchData()
        //setInterval(this.resetWidth, 100)
    },
    props: ['data'],
    data() {
        return {
            currentPage: 1,
            pageSize: 10,
            total: 0,
            data: [],
            portal :'',
            filterVal:'1',
            rangeVal:'f1r1',
            natureVal:'',
            allTradeVal:'',
            allTradeShow:true,
            filterList:{},
            filterData1:{},
            filterData2:{}
        }
    },
    beforeCreate(){
        axios.get('/static/datas/newsFilter1.json').then((res)=>{
            this.filterData1 = res.data
            this.filterList = res.data
        })
        axios.get('/static/datas/newsFilter2.json').then((res)=>{
            this.filterData2 = res.data
        })
    },
    methods: {
        // 筛选改变
        filterChange(value){
            if(value === '2'){
                this.filterList = this.filterData2
                this.allTradeShow = false
                this.filterVal='2'
                this.rangeVal='f2r1'
            }else{
                this.filterList = this.filterData1
                this.allTradeShow = true
                this.filterVal='1'
                this.rangeVal='f1r1'
            }
        },
        fetchData: function () {
            this.list = []
            axios.get('http://192.168.13.54:1111/inforMation/findInforMation/' + this.currentPage + "?pageSize=" + this.pageSize)
                .then(response => {
                    this.data = response.data
                }).catch(function (error) {
                    console.log(error)
                })
        },
        nextPage(val) {
            this.currentPage = val
            this.list = []
            axios.get('http://192.168.13.54:1111/inforMation/findInforMation/' + this.currentPage + "?pageSize=" + this.pageSize)
                .then(response => {
                    this.data = response.data
                }).catch(function (error) {
                    console.log(error)
                })
        },
        routeTo(e) {
            if(e == '/portal'){
                this.portal = 'http://192.168.7.61:8080/ovit/center/gateway.htm?uid='+this.loginuserinfo.uniqueId
                window.open(this.portal)
            }else{
                this.$router.push(e)
            }
        },
        resetWidth() {
            $(".ivu-page li").css("min-width", "initial").css("width", "32px")
        }
    }
}
</script>