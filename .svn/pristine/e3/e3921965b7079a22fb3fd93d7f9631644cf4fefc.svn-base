<script>
import axios from 'axios'
import $ from 'jquery'
export default {
    created() {
        this.fetchData()
        //setInterval(this.resetWidth, 100)
    },
    props: ['data'],
    data() {
        return {
            currentPage: 1,
            pageSize: 10,
            total: 0,
            data: [],
            portal :''
        }
    },
    methods: {
        fetchData: function () {
            this.list = []
            axios.get('http://localhost:1111/inforMation/findInforMation/' + this.currentPage + "?pageSize=" + this.pageSize)
                .then(response => {
                    this.data = response.data
                    var h = response.data.size * 148
                    $("#box").css("height", h + "px")
                }).catch(function (error) {
                    console.log(error)
                })
        },
        nextPage(val) {
            this.currentPage = val
            this.list = []
            axios.get('http://localhost:1111/inforMation/findInforMation/' + this.currentPage + "?pageSize=" + this.pageSize)
                .then(response => {
                    this.data = response.data
                    var h = response.data.size * 148
                    $("#box").css("height", h + "px")
                    // resetWidth()
                }).catch(function (error) {
                    console.log(error)
                })
        },
        routeTo(e) {
            if(e == '/portal'){
                this.portal = 'http://192.168.7.61:8080/gf_mall_client/shop/seller.html?memLoginId='+this.loginuserinfo.loginAccount
                window.open(this.portal)
            }else{
                this.$router.push(e)
            }
        },
        resetWidth() {
            $(".ivu-page li").css("min-width", "initial").css("width", "32px")
        }
    }
}
</script>