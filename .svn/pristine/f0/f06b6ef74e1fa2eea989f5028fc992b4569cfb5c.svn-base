<script>
    import axios from 'axios'
    import $ from 'jquery'

    export default {
        created () {
            this.fetchData()
        },
        data () {
            return {
                currentPage: 1,
                pageSize: 5,
                total: 0,
                list: [],
                portal :''
            }
        },
        methods: {
            fetchData: function () {
                this.list = []
                axios.get('http://localhost:1111/knowLege/findKnowLedge/' + this.currentPage + "?pageSize=" + this.pageSize)
                    .then(response => {
                        this.total = response.data.total
                        this.list = response.data.list

                    }).catch(function (error) {
                    console.log(error)
                })
            },
            nextPage(val){
                this.currentPage = val
                this.list = []
                axios.get('http://localhost:1111/knowLege/findKnowLedge/' + this.currentPage + "?pageSize=" + this.pageSize)
                    .then(response => {
                        this.total = response.data.total
                        this.list = response.data.list
                    }).catch(function (error) {
                    console.log(error)
                })
            },

            routeTo(e) {
                if(e == '/portal'){
                    this.portal = 'http://192.168.7.61:8080/gf_mall_client/shop/seller.html?memLoginId='+this.loginuserinfo.loginAccount
                    window.open(this.portal)
                }else{
                    this.$router.push(e)
                }
            },
            knowledge() {
                this.$router.push({
                    path: '/pro/knowledgeList',query:{flag: 3}
                })
            }
        }
    }
</script>