
.layouts{
    width: 1200px;
    margin: 0 auto;
}


.search-wrap{
    width:625px;
    margin: 30px auto;
    .ivu-select-single .ivu-select-selection,
    .ivu-select-input{
        height:38px;
        line-height:38px;
    }
    .ivu-select-single .ivu-select-selection,
    .ivu-btn{
        border-radius:0;
    }
    .ivu-btn{
        font-size:16px;
        width: 131px;
    }
    .hot-tag{
        margin-top:10px;
        font-size:14px;
        &,.item{color:#9B9B9B;}
        .item{
            display: inline-block;
            margin:0 10px;
            text-align:center;
        }
    }
}
.mall-nav{
    >.layouts{
        position: relative;
    }
    background:#4FAC77;
    .link{
        display: inline-block;
        vertical-align:middle;
        padding:10px 20px;
        font-size:16px;
        color:#fff;
        &:hover,
        &.on{
            background:#458F65;
        }
    }
    .min-nav{
        position: absolute;
        top: 100%;
        right: 0;
        left: 0;
        z-index: 99;
    }
}
.min-nav{
    padding: 15px 0;
    width: 134px;
    height:440px;
    background: rgba(255,255,255,0.87);
    .item{
        font-size: 14px;
        color: #4A4A4A;
        padding:10px 15px;
        text-align: center;
        &.on,
        &:hover{
            color: #fff;
            background: #56B07D;
        }
        &:hover{
            .sub{
                display: block;
            }
        }
        .sub{
            display: none;
            position: absolute;
            top:0;
            left: 134px;
            width: 1060px;
            height:440px;
            background: #fff;
            padding:15px;
        }
        .sub-class,
        .sub-link{
            display: inline-block;
            &:hover{
                color:  #4fac77;
            }
            
        }

        .sub-class{
            padding:4px 10px;
            color: #646464;
        }
        .sub-link{
            padding:0 10px;
            border:1px solid #E5E5E5;
            border-top: 0;
            border-bottom: 0;
            color: #8D8D8D;
            margin:0 -1px 10px 0;
        }
    }
    .shop-logo{
        margin: -1px;
        display: block;
        height: 84px;
        border: 1px solid #ddd;
        img{
            width: 100%;
            height: 100%;
        }

    }
}

.auction-bannner{
    .h2{
        font-size: 32px;
    }
    .h5{
        font-size: 18px;
    }
    .h4{
        font-size: 20px;
    }
    .ivu-carousel-item{
        position: relative;
    }
    .tit{
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        padding: 10px;
        background: #4A4A4A;
        color: #fff;
    }
    .item{
        font-size:14px;
    }
}
.goods-list{
    .h6{
        font-size: 16px;
    }
    .h4{
        font-size: 20px;
    }
    margin-top: 50px;
    >.hd{
        .tit{
            padding:5px;
            border-bottom:2px solid #D8D8D8;
            font-size: 20px;
        }
    }
    .fliter{
        background: rgba(241,241,241,0.51);
        border: 1px solid rgba(218,218,218,0.39);
    }
    .goods{
        overflow: hidden;
        &:hover{
            box-shadow: 0 0 0 2px #51ad79;
        }
        .hd{
            background:#51ad79;
            padding:10px;
            color:#fff;
            .item{
                background: rgba(21,46,32,0.29);
                border-radius: 4px;
                padding:3px 5px;
                margin:0 2px;
                font-size:16px;
            }
        }
        .bd,.info{
            border-left: 1px solid #E8E8E8;
            border-right: 1px solid #E8E8E8;
        }
        .info{
            span{
                display:inline-block;
                vertical-align: middle;
            }
            
        }
        .bd{
            height:210px;
            overflow:hidden;
            img{
                display:block;
                height:100%;
                max-width:100%;
                margin: auto;
                transition:transform .2s $ease-in-sine;
            }
            &:hover{
                img{
                    transform:scale(1.1);
                }
            }
        }
        .fd{
            .ivu-btn{
                font-size:16px;
                border-radius:0;
            }
        }
    }
}
.hot-auction{
    .goods{
        height: 383px;
    }
    
}
.group-buy-list{
    .fd{
        border:1px solid #51ad79;
        .ivu-btn{
            height: 51.6px;
        }
    }

}

